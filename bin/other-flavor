#!/bin/bash

if test -n "$1" -a -e "$OTHER/install/$1"; then
  rm -f $OTHER/install/flavor
  ln -sf $1 $OTHER/install/flavor
elif [ "$1" ]; then
  echo flavor \"$1\" not found.
elif [ -e '/opt/local/bin/gls' ]; then
  gls -GCFl --color=auto $OTHER/install
elif [ `uname` == 'Linux' ]; then
  ls -GCFl --color=auto $OTHER/install
else
  ls -GCFl $OTHER/install
fi
